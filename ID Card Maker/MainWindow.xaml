<Window x:Class="ID_Card_Maker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Information" ResizeMode="CanMinimize"
        DataContext="{Binding RelativeSource={RelativeSource Self}}" Height="396.613" Width="429.469">
    <Grid>
        <Button x:Name="PrintButton" Margin="0,0,67,36" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="InvokePrint" FontSize="16" Height="56" Width="101">
            <TextBlock TextAlignment="Center">
                🖨
                <LineBreak/>
                Print
            </TextBlock>
        </Button>
        <Button x:Name="PrintPreview" Content="Show Preview" Margin="0,0,67,97" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="PreviewRequest" FontSize="16" />
        <Label x:Name="label_NameFirst" Content="First Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label x:Name="label_NameLast" Content="Last Name:" HorizontalAlignment="Left" Margin="10,63,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label x:Name="label_JobTitle" Content="Job Title:" HorizontalAlignment="Left" Margin="10,116,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="Input_NameFirst" Height="31" Margin="105,10,10,0" Text="{Binding Name_First, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" FontSize="16" MaxLines="1" AutomationProperties.LabeledBy="{Binding ElementName=label_NameFirst, Mode=OneWay}" GotFocus="Input_Text_GotFocus" />
        <TextBox x:Name="Input_NameLast" Height="31" Margin="105,63,10,0" Text="{Binding Name_Last, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" FontSize="16" MaxLines="1" AutomationProperties.LabeledBy="{Binding ElementName=label_NameLast, Mode=OneWay}" GotFocus="Input_Text_GotFocus"/>
        <TextBox x:Name="Input_JobTitle" Height="31" Margin="105,116,10,0" Text="{Binding Job_Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" FontSize="16" MaxLines="1" AutomationProperties.LabeledBy="{Binding ElementName=label_JobTitle, Mode=OneWay}" GotFocus="Input_Text_GotFocus"/>
        <Label x:Name="label_Photo" Content="Photo" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="55,307,0,10" FontSize="16" Width="{Binding Width, ElementName=button}"/>
        <Button x:Name="btn_Photo" HorizontalAlignment="Left" Margin="10,152,0,0" VerticalAlignment="Top" Height="{Binding Width, ElementName=button}" AutomationProperties.LabeledBy="{Binding ElementName=label_Photo, Mode=OneWay}" Width="150" Click="Btn_Photo_Click">
            <Image x:Name="Input_Photo" Source="{Binding Photo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </Button>
    </Grid>
</Window>
