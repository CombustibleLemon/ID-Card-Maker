<Window x:Class="ID_Card_Maker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="611.941" Width="347.869" ResizeMode="CanMinimize" SizeToContent="WidthAndHeight">
    <Grid>
        <Border BorderBrush="Black" OpacityMask="Black">
            <Grid x:Name="CardDesign" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Bottom" Height="478" Width="301" Background="{DynamicResource {x:Static SystemColors.DesktopBrushKey}}">
                <Image x:Name="Photo" HorizontalAlignment="Center" Height="256" Margin="0,10,0,0" VerticalAlignment="Top" Width="256" Source="C:\Users\glenn.leonard.GOLDRUSH\Pictures\Logitech Webcam\Picture 2.jpg" Stretch="Fill" Cursor="Hand"/>
                <TextBox x:Name="NameFirst" HorizontalAlignment="Center" Height="72" Margin="10,271,10,0" TextWrapping="Wrap" Text="First Name" VerticalAlignment="Top" Width="281" BorderThickness="0" FontSize="48" Background="{x:Null}" Foreground="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" TextChanged="NameFirst_TextChanged"/>
                <Rectangle Margin="0,0,0,0" VerticalAlignment="Bottom" Fill="#FFFACA35" Height="135" />
                <TextBox x:Name="NameLast" HorizontalAlignment="Center" Height="69" Margin="10,343,10,0" TextWrapping="Wrap" Text="Last Name" VerticalAlignment="Top" Width="281" BorderThickness="0" FontSize="48" FontWeight="Bold" Background="{x:Null}" TextChanged="NameLast_TextChanged"/>
                <TextBox x:Name="JobDescription" HorizontalAlignment="Center" Height="34" Margin="10,417,10,0" TextWrapping="Wrap" Text="Job Description" VerticalAlignment="Top" Width="281" BorderThickness="0" FontSize="18" Background="{x:Null}" TextChanged="JobDescription_TextChanged"/>
            </Grid>
        </Border>
        <Button x:Name="PrintButton" Content="Print" Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" />
    </Grid>
</Window>
