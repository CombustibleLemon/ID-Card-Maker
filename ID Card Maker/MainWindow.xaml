<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
        xmlns:local="clr-namespace:ID_Card_Maker"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="ID_Card_Maker.MainWindow"
        Title="ID Card Maker"
        DataContext="" Closing="Window_Closing" >

    <!-- Main grid -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition MinWidth="560" />
        </Grid.ColumnDefinitions>

        <!-- Grid within left column, design controls -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Card preview pane -->
            <local:CardPreview x:Name="cardPreviewer" Grid.Row="0" />

            <!-- Groupbox for card designs -->
            <GroupBox Grid.Row="1" Margin="10" Header="Card Design">
                <UniformGrid x:Name="CardDesignChoosers" Columns="3"/>
            </GroupBox>

            <Button x:Name="PrintButton" Grid.Row="2" Margin="0" Click="InvokePrint" Width="101" VerticalAlignment="Center" HorizontalAlignment="Center">
                <emoji:TextBlock TextAlignment="Center">
                    <Run Text="🖨"/>
                    <LineBreak/>
                    <Run Text="Print"/>
                </emoji:TextBlock>
            </Button>
        </Grid>

        <!-- Grid within right column, data controls -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="200" />
                <RowDefinition Height="337*" />
            </Grid.RowDefinitions>

            <GroupBox Header="{Binding Source={StaticResource person}, Path=Job_Title}" Grid.Row="0" Margin="10">
                <local:PersonBio x:Name="uc_Biodata" />
            </GroupBox>
            <GroupBox Header="Camera Controls" Grid.Row="1" Margin="10">
                <local:PhotoTaker x:Name="uc_PhotoTaker" />
            </GroupBox>
        </Grid>
    </Grid>
</Window>
