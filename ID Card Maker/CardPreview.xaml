<UserControl x:Class="ID_Card_Maker.CardPreview"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ID_Card_Maker"
      xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
      mc:Ignorable="d" Cursor="No">
    <!-- Title="Card Preview" WindowTitle="Print Preview"> -->

    <Grid x:Name="CardDesign" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Bottom" Height="478" Width="301">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Image x:Name="LogoImage" Height="98" Margin="35,10,35,0" Source="Resources/img/gold_rush_text.png" VerticalAlignment="Top" Width="231"/>
        <Image x:Name="Photo" Height="180" Margin="57,113,57,0" Stretch="Fill" Source="{Binding Source={StaticResource person}, Path=Photo, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top"/>
        <!--<TextBox x:Name="NameFirst"         Grid.Row="0" Text="{Binding Name_First, UpdateSourceTrigger=PropertyChanged}" Height="54" Margin="10,298,10,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="281" BorderThickness="0" FontSize="36" Background="{x:Null}" FontWeight="Normal" IsReadOnly="True" Cursor="{Binding Cursor, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:CardPreview}}}" IsTabStop="False" Focusable="False"/>-->
        <Label x:Name="NameFirst"       Grid.Row="0" Content="{Binding Source={StaticResource person}, Path=Name_First, UpdateSourceTrigger=PropertyChanged, diag:PresentationTraceSources.TraceLevel=High}" Height="54"  Margin="10,298,10,0"  VerticalAlignment="Top" Width="281" BorderThickness="0"  FontSize="36" Background="{x:Null}" FontWeight="Normal"    />
        <Border x:Name="Sec2Color" Background="{DynamicResource GoldRush_Gold}" Grid.Row="1" Grid.RowSpan="3" />
        <!--<TextBox x:Name="NameLast"          Grid.Row="1" Text="{Binding Name_Last,  UpdateSourceTrigger=PropertyChanged}" Height="52" Margin="10,0"         TextWrapping="Wrap" VerticalAlignment="Top" Width="281" BorderThickness="0" FontSize="36" Background="{x:Null}" FontWeight="Bold"   IsReadOnly="True" Cursor="{Binding Cursor, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:CardPreview}}}" IsTabStop="False" Focusable="False"/>-->
        <Label x:Name="NameLast"        Grid.Row="1" Content="{Binding Source={StaticResource person}, Path=Name_Last,  UpdateSourceTrigger=PropertyChanged, diag:PresentationTraceSources.TraceLevel=High}" Height="52" Margin="10,0"          VerticalAlignment="Top" Width="281" BorderThickness="0" FontSize="36" Background="{x:Null}" FontWeight="Bold"       />
        <!--<TextBox x:Name="JobDescription"    Grid.Row="2" Text="{Binding Job_Title,  UpdateSourceTrigger=PropertyChanged}" Height="34" Margin="10,5"         TextWrapping="Wrap" VerticalAlignment="Top" Width="281" BorderThickness="0" FontSize="18" Background="{x:Null}" FontWeight="Normal" IsReadOnly="True" Cursor="{Binding Cursor, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:CardPreview}}}" IsTabStop="False" Focusable="False"/>-->
        <Label x:Name="JobDescription"  Grid.Row="2" Content="{Binding Source={StaticResource person}, Path=Job_Title,  UpdateSourceTrigger=PropertyChanged, diag:PresentationTraceSources.TraceLevel=High}" Height="34" Margin="10,5"          VerticalAlignment="Top" Width="281" BorderThickness="0" FontSize="18" Background="{x:Null}" FontWeight="Normal"     />
        <Grid x:Name="Footer" Grid.Row="3">
            
        </Grid>
    </Grid>
</UserControl>
